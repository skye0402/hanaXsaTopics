<mvc:View controllerName="usingSmartTables.usingSmartTables.controller.aSimpleSmartTable" xmlns="sap.m" xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:smartVariantManagement="sap.ui.comp.smartvariants"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:smartTable="sap.ui.comp.smarttable" height="100%" width="100%">
	<f:DynamicPage id="dynamicPage">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Filters"/>
				</f:heading>
				<f:expandedContent>
					<SearchField id="search" width="25%" search="onSearch"/>
				</f:expandedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<smartVariantManagement:SmartVariantManagement id="pageVariantId" persistencyKey="PageVariantPKey"/>
				<smartFilterBar:SmartFilterBar id="simpleSmartFilterBar" smartVariant="pageVariantId" entitySet="Customers"
					persistencyKey="simpleSmartFilterKey" class="sapUiSmallMarginBottom" basicSearch="search">
					<smartFilterBar:controlConfiguration>
						<smartFilterBar:ControlConfiguration key="CustomerNumber" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
						<smartFilterBar:ControlConfiguration key="CustomerName" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
						<smartFilterBar:ControlConfiguration key="City" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
						<smartFilterBar:ControlConfiguration key="CountryCode" visibleInAdvancedArea="true" preventInitialDataFetchInValueHelpDialog="false"></smartFilterBar:ControlConfiguration>
					</smartFilterBar:controlConfiguration>
				</smartFilterBar:SmartFilterBar>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<smartTable:SmartTable id="aSmartTable" entitySet="Customers" smartFilterId="simpleSmartFilterBar" tableType="Table" useExportToExcel="true"
				beforeExport="onBeforeExport" showTablePersonalisation="true" useVariantManagement="true" useTablePersonalisation="true"
				header="{i18n>tableHeaderText}" showRowCount="true" showFullScreenButton="true" editable="false" smartVariant="pageVariantId"
				initiallyVisibleFields="CustomerNumber,CustomerName,AddressForm,Street,POBox,PostalCode,City,CountryCode" initialise="onInitialise"
				persistencyKey="simpleSmartTableKey" enableAutoBinding="true" class="sapUiResponsiveContentPadding">
				<smartTable:layoutData>
					<FlexItemData growFactor="1" baseSize="0%"/>
				</smartTable:layoutData>
			</smartTable:SmartTable>
		</f:content>
	</f:DynamicPage>
</mvc:View>